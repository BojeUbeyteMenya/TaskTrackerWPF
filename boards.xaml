<Window x:Class="Project_3.boards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_3"
        mc:Ignorable="d"
        Title="boards" Height="1000" Width="1000">

    <Grid Background="#7DE38C">
        <Border MinWidth="400" Margin="40" Background="#34AD45" VerticalAlignment="Top" Padding="30" MaxWidth="900" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGreen" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Add board"/>
                    <Button HorizontalAlignment="Center" Content="Delete"/>
                    <Button HorizontalAlignment="Right" Content="Poka ne znayu"/>


                </Grid>
                <ListView x:Name="List_Of_Boards" Margin="15" />



            </StackPanel>
        </Border>
    </Grid>
</Window>
